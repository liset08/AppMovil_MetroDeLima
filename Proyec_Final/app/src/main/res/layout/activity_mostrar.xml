<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mostrar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.liset.proyec_final.MostrarActivity"
    android:background="@color/colorfonodo"
    android:weightSum="1"
    tools:background="@color/colorfonodo">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="1"
        tools:background="@color/cardview_shadow_start_color"
        android:background="@color/cardview_dark_background"
        android:layout_height="60dp">

        <TextView
            android:text="Codigo          "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textColor="@color/cardview_light_background"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp" />

        <EditText
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/etcodigotarje"
            android:layout_marginTop="6dp" />

        <Button
            android:layout_height="wrap_content"
            android:id="@+id/btnconsultarcod"
            android:layout_alignBaseline="@+id/etcodigotarje"
            android:layout_alignBottom="@+id/etcodigotarje"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:elevation="24dp"
            android:drawableLeft="@mipmap/buscar"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="30dp"
            android:layout_width="59dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="323dp"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:background="@android:color/transparent"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Hola     "
                    android:layout_width="151dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:textColor="@android:color/background_dark"
                    android:textAlignment="textEnd" />

                <TextView
                    android:layout_width="136dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/etnombre"
                    android:textStyle="normal|bold"
                    android:fontFamily="monospace"
                    android:textSize="24sp"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorpri"></TextView>

            </LinearLayout>

            <TextView
                android:text="tu saldo disponible es .."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                android:fontFamily="sans-serif"
                android:textColor="?android:attr/panelColorForeground"
                android:textSize="16sp" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="231dp"
            android:layout_height="115dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="40dp"
            tools:background="@android:color/transparent"
            android:background="@android:color/transparent"
            android:layout_weight="0.18">

            <TextView
                android:text="{ "
                android:layout_width="27dp"
                android:layout_height="match_parent"
                android:id="@+id/textView7"
                android:textSize="80dp"
                android:textStyle="normal|bold"
                android:textColor="?android:attr/colorForeground"
                android:layout_marginLeft="20dp" />

            <TextView
                android:text="S/"
                android:layout_width="27dp"
                android:layout_height="31dp"
                android:id="@+id/textView15"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="50dp"
                android:lineSpacingExtra="8sp"
                android:textSize="20sp" />

            <TextView
                android:layout_width="27dp"
                android:layout_height="match_parent"
                android:id="@+id/textView6"
                android:textSize="80dp"
                android:text="}"
                android:layout_marginLeft="180dp"
                android:textStyle="normal|bold"
                android:textColor="?android:attr/textColorPrimaryNoDisable" />

            <TextView
                android:layout_width="107dp"
                android:layout_height="61dp"
                android:id="@+id/etmonto"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="21dp"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                android:fontFamily="sans-serif"
                android:textSize="36sp"
                android:textColor="@color/colorAccent" />
        </FrameLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:text="Estado : "
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:layout_marginTop="20dp"
                android:layout_width="99dp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="159dp"
                android:layout_height="wrap_content"
                android:id="@+id/etestado"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_weight="0.49"
        android:layout_marginTop="20dp"
        android:weightSum="1"
        >

        <Button
            android:text="Cerrar SesiÃ³n"
            android:layout_width="146dp"
            android:layout_height="match_parent"
            android:id="@+id/btncerrar"
            android:background="@color/colorpri"
            android:drawableLeft="@mipmap/cerr"
            android:layout_marginRight="20dp" />

        <Button
            android:text="perfil"
            android:layout_width="146dp"
            android:layout_height="match_parent"
            android:id="@+id/perfil"
            android:drawableLeft="@mipmap/uss"
            android:textColorLink="@color/colorpri"
            android:background="@color/colorpri"
            android:layout_weight="0.60" />

    </LinearLayout>

</LinearLayout>
